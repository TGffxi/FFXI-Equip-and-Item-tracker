    const content = e.target.result;
    const patternSimple = /([a-zA-Z_]+)\s*=\s*(['"])(.*?)\2/g;
    const patternNamed = /([a-zA-Z_]+)\s*=\s*{[^}]*name\s*=\s*(['"])(.*?)\2[^}]*}/g;
    const parsed = {};
    const slots = {};
    const augments = {};

    let match;
    while ((match = patternSimple.exec(content)) !== null) {
      const name = match[3].trim();
